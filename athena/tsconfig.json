{
    "include": [
        "src",
        "typings"
    ],
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "jsx": "preserve",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "error",
        "baseUrl": "src",
        "paths": {
            "@pages/*": [
                "pages/*"
            ],
            "@rest/*": [
                "rest/*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@shared/*": [
                "shared/*"
            ],
        }
    },
}