{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "noEmit": true,
        "composite": false,
        "declaration": false,
        "declarationMap": false,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "jsx": "preserve",
        "importsNotUsedAsValues": "error",
        "baseUrl": "src",
        "paths": {
            "@auth/*": [
                "auth/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@functions/*": [
                "functions/*"
            ],
            "@hooks/*": [
                "hooks/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@typings/*": [
                "typings/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}