{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "jsx": "preserve",
        "importsNotUsedAsValues": "error",
        "baseUrl": "src",
        "paths": {
            "@pages/*": [
                "pages/*"
            ],
            "@rest/*": [
                "rest/*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}